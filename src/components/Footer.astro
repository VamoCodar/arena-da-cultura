    font-family: var(--font-sans);
    font-weight: 600;
    font-size: 0.8rem;
    text-transform: uppercase;
    letter-spacing: 0.06em;
    color: #888;
    margin-bottom: var(--space-xs);
  }

  .footer-link {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    font-size: 0.875rem;
    color: #ccc;
    transition: color var(--transition-fast);
  }

  .footer-link:hover {
    color: white;
  }

  .footer-bottom {
    padding-top: var(--space-lg);
    border-top: 1px solid #333;
  }

  .footer-bottom p {
    font-size: 0.75rem;
    color: #666;
    text-align: start;
  }

  .footer-credit {
    margin-top: var(--space-sm);
  }

  .footer-credit .heart {
    color: #e25555;
  }

  .footer-credit a {
    color: #aaa;
    text-decoration: underline;
    text-underline-offset: 2px;
    transition: color var(--transition-fast);
  }

  .footer-credit a:hover {
    color: white;
  }

  @media (min-width: 768px) {
    .footer-inner {
      display: grid;
      grid-template-columns: 1fr 1fr;
      grid-template-rows: auto auto;
      gap: var(--space-xl);
    }

    .footer-bottom {
      grid-column: 1 / -1;
    }
  }
</style>
