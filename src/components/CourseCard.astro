---
import type { Course } from "../data/courses";
import { JOTFORM_IDS } from "../data/courses";
import AreaBadge from "./AreaBadge.astro";
import AgeBadge from "./AgeBadge.astro";
import OnlineBadge from "./OnlineBadge.astro";

interface Props {
  course: Course;
}

const { course } = Astro.props;

const formatDateRange = (start: string | null, end: string | null) => {
  if (!start || !end) return null;
  const fmt = (d: string) => {
    const date = new Date(d + "T12:00:00");
    return date
      .toLocaleDateString("pt-BR", { day: "2-digit", month: "short" })
      .replace(/\.$/, "");
  };
  return `${fmt(start)} â€” ${fmt(end)}`;
};

const dateRange = formatDateRange(course.startDate, course.endDate);
const isOnline =
  course.location.includes("Online") || course.location.includes("EAD");

const mapsUrl = isOnline
  ? null
  : `https://www.google.com/maps/search/${encodeURIComponent(course.location + ", Belo Horizonte, MG")}`;

const jotformAnchor = JOTFORM_IDS[course.id];
const enrollUrl = jotformAnchor
  ? `${course.enrollmentUrl}#${jotformAnchor}`
  : course.enrollmentUrl;

const specificDatesFormatted =
  course.specificDates.length > 0
    ? course.specificDates
        .map((d) => {
          const date = new Date(d + "T12:00:00");
          return date
            .toLocaleDateString("pt-BR", {
              day: "2-digit",
              month: "short",
            })
            .replace(/\.$/, "");
        })
        .join(", ")
    : null;
---

<article
  class="course-card"
  style="position: relative;"
  data-area={course.area}
  data-location={course.location}
  data-course-id={course.id}
  data-name={course.name.toLowerCase()}>
  <!-- Header: badge + enroll button -->
  <div class="card-header">
    <div class="card-badges">
      <AreaBadge area={course.area} />
      {isOnline && <OnlineBadge />}
    </div>
    <!--     style={`background:${colors.text}`} -->
    <a
      href={enrollUrl}
      target="_blank"
      rel="noopener"
      class="card-enroll-btn tooltip"
      data-tooltip="Inscrever-se"
      aria-label={`Inscrever-se em ${course.name}`}>
      <span class="material-symbols-outlined">open_in_new</span>
    </a>
  </div>

  <!-- Title -->
  <h3 class="card-title">{course.name}</h3>

  <!-- Info rows -->
  <div class="card-info">
    {
      dateRange && (
        <div class="card-info-item card-info-period">
          <span class="material-symbols-outlined card-info-icon">
            date_range
          </span>
          <span>{dateRange}</span>
        </div>
      )
    }
    {
      specificDatesFormatted && (
        <div class="card-info-item card-info-period">
          <span class="material-symbols-outlined card-info-icon">event</span>
          <span>{specificDatesFormatted}</span>
        </div>
      )
    }
    <div class="card-info-item">
      <span class="material-symbols-outlined card-info-icon">schedule</span>
      <span>{course.schedule}</span>
    </div>
    <div class="card-info-item">
      <span class="material-symbols-outlined card-info-icon">location_on</span>
      {
        mapsUrl ? (
          <a
            href={mapsUrl}
            target="_blank"
            rel="noopener"
            class="card-location-link">
            {course.location}
            <span
              class="material-symbols-outlined"
              style="font-size:12px;vertical-align:-1px;margin-left:2px">
              open_in_new
            </span>
          </a>
        ) : (
          <span>{course.location}</span>
        )
      }
    </div>
  </div>

  <!-- Age badge -->
  <div
    class="card-footer"
    style="margin-left: auto; position: absolute; bottom: 12px; right: 12px;">
    <AgeBadge ageRange={course.ageRange} />
  </div>
</article>

<style>
  .course-card {
    background: var(--bg-card);
    border: 1px solid var(--border);
    border-radius: var(--radius-lg);
    padding: var(--space-md);
    transition: all var(--transition-base);
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
    cursor: pointer;
  }

  .course-card:hover {
    border-color: var(--border-hover);
    box-shadow: var(--shadow-md);
    transform: translateY(-2px);
  }

  .card-header {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    gap: var(--space-sm);
  }

  .card-badges {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    flex-wrap: wrap;
  }



  .card-enroll-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 32px;
    height: 32px;
    border-radius: var(--radius-sm);
    color: var(--text-secondary);
    flex-shrink: 0;
    /* background: rgba(0, 0, 0, 0.05); */
    transition: all var(--transition-fast);
    text-decoration: none;
  }

  .card-enroll-btn .material-symbols-outlined {
    font-size: 18px;
  }

  .card-enroll-btn:hover {
    filter: brightness(0.85);
    transform: scale(1.08);
  }

  .card-title {
    font-family: var(--font-sans);
    font-weight: 600;
    font-size: 0.975rem;
    line-height: 1.35;
    color: var(--text-primary);
    min-height: 43px;
  }

  .card-info {
    display: flex;
    flex-direction: column;
    gap: 5px;
  }

  .card-info-item {
    display: flex;
    align-items: center;
    gap: 6px;
    font-size: 0.8125rem;
    color: var(--text-secondary);
  }

  .card-info-icon {
    font-size: 16px;
    color: var(--text-muted);
    flex-shrink: 0;
  }

  .card-info-period {
    font-weight: 500;
    color: var(--text-primary);
  }

  .card-location-link {
    color: var(--text-secondary);
    text-decoration: none;
    transition: color var(--transition-fast);
  }

  .card-location-link:hover {
    color: var(--accent);
    text-decoration: underline;
  }

  .card-footer {
    display: flex;
    align-items: center;
    margin-top: auto;
    padding-top: var(--space-xs);
  }

  /* Tooltip */
  .tooltip {
    position: relative;
  }

  .tooltip::after {
    content: attr(data-tooltip);
    position: absolute;
    bottom: calc(100% + 6px);
    left: 50%;
    transform: translateX(-50%) scale(0.92);
    padding: 4px 10px;
    border-radius: var(--radius-sm);
    background: var(--text-primary);
    color: #fff;
    font-size: 0.7rem;
    font-weight: 500;
    white-space: nowrap;
    pointer-events: none;
    opacity: 0;
    transition:
      opacity 150ms ease,
      transform 150ms ease;
  }

  .tooltip:hover::after,
  .tooltip:focus-visible::after {
    opacity: 1;
    transform: translateX(-50%) scale(1);
  }
</style>
